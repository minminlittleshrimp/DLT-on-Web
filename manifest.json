{
    "manifest_version": 3,
    "name": "DLT plugins example",
    "version": "1.0",

    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
 
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],

    "action": {
        "default_popup": "popup.html"
    } 
}